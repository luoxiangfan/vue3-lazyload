{
  "compilerOptions": {
    "target": "ESNext",
    "module": "Preserve",
    "lib": ["esnext", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationDir": "./types",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "jsx": "preserve"
  },
  "exclude": ["node_modules/**/*", "dist/**/*"]
}
